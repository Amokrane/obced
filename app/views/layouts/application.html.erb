<!DOCTYPE html>
<html>
	<head>
		<meta http-equiv="Content-Type" content="application/xhtml+xml; charset=utf-8" />
		<title> Discover one beautiful code everyday -- Oh The Code </title>
		<%= stylesheet_link_tag :all %>
		<%= javascript_include_tag :defaults %>
		<%= csrf_meta_tag %>

		<script type="text/javascript">
			$(function() {
				$('#topslider').tabs()
			});
		</script> 
	</head>

	<body>
		<% if !notice.nil? %>
			<p class="notice"><%= notice %></p>
		<% end %>
		
		<!-- header -->
		<%= render 'shared/header' %>

		<p class="alert"><%= alert %> Sample alert, please remove it</p>

		<div id ="content">
			<div class="middle">
				<%= yield %>
			</div>	
		</div>

		<%= render 'shared/footer' %>
	</body>
</html>
