<body>
	<%= image_tag("github_logo.png") %> <br/>

	
	<% if current_user %>
		  <% if current_user.nickname %>
				<%= "You are signed in as #{current_user.nickname}" %> <br/>
			<% else %>
				<%= "You are signed in as #{current_user.email}" %> <br/>
			<% end %>	
			<%= link_to 'Logout', destroy_user_session_path %>  <br/>
	<% else %>
			<%= link_to 'Login', new_user_session_path %> <br/>
			<%= link_to 'Or login via Twitter', '/auth/twitter' %> <br/>
	<% end %>
	
	<% if current_user %>
		<%= link_to 'Active codes', codes_path %> | <br/>
		<%= link_to 'Propose your most beautiful code', new_code_path %> | <br/>
		<%= link_to 'Tags', tags_path %> | <br/>
	<% end %>
	<%= link_to 'Home', root_path %> | <br/> 
	<%= link_to 'Archives', archives_path %> | <br/> 
	
</body>
