<% @code = @selected_codes.first %>

<div class="container-home"> 
	<% if !@code.nil? %>
		<div id="codeoftheday">			
			<h1> The code of the day is </h1>

		
			<div id="code-header">
	    		<h2> <%= @code.title %> </h2>
	    		<h3> Uploaded by: <%= link_to "#{@code.user.nickname}", user_path(@code.user) %> </h3>
	  		</div>
                                
      		<div class="code-box">
    			<div class="code-box-content">
    				<pre>
    					<!-- <code> -->
                       		<%= markdown(@code.content) %>
						<!-- </code> -->
					</pre>

      				<%= link_to 'Read more about this code now!', code_path(@code) %>
 	     		</div> 
 	     	</div>
 	    </div>       

     <% else %>
      <!-- Ghislaine: Display something like: no code here yet. This could be yours! -->
      <div id="codeoftheday">			
			<h1> No code today! </h1>     
			
			<div id="code-header">
	    		
	  		</div>
	  		       
      		<div class="code-box">
      			<div class="code-box-content">
	      			<pre>
						<!-- How to put the size of the font inline -->
						<code>
	                  		<%= sanitize Kramdown::Document.new("This space could be yours!").to_html  %>
						</code>
					</pre>
    			
      				<%= link_to 'Post a code', new_code_path %> 
 	     		</div>
 	    	</div>
 	    </div>       
      <% end %>
</div>
                   
