<h1 class="page-title">User Profile</h1>

<div class="profile-box">
	
	<h2><strong><%= @user.nickname %></strong></h2>
	<div class="profile-box-left">
	<div class="user-photo">
	photo
	</div>
	<div class="profile-box-score">
	<p><%= @user.score %></p>
	</div>
	</div>


	

	<div class="profile-box-details">
	<div class="user-info"><h4>Email</h4> <%= @user.email %> </div>
	<div class="user-info"><h4>Website</h4> <%= @user.website %> </div>
	<p> <%= @user.biography %> </p>
	</div>
	
	

	

	<% if !current_user.nil? %>
		<% if current_user.email == @user.email %>
			<%= link_to 'Edit Profile', edit_user_registration_path(@user), :id => 'edit-profile' %>
		<% end %>
	<% end %>
	
	<div class="profile-box-vote">
	<h3>Vote for this user</h3>
	<p>A bloc that explains why we should vote for this user</p>
		<%= button_to "Up", user_vote_up_path(:user_id => @user.id) %>
	</div>
</div>



<div class="user-codes">
	<h3><%= @user.nickname %>'s posted codes: </h3>
	<ul>
	<% @user.codes.each do |c| %>
		<li><%= c.title %></li>
	<% end %>
	</ul>
</div>

<div class="clear"></div>

